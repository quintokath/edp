<body>
    <div>
        <h4> Different Types of Mouse Event</h4>
        <table class="table-border">
            <tbody>
                <tr>
                    <td class="bordered span-2">
                       <button id="mouse-click">Click me!</button>
                    </td>
                    <td class="bordered p-left">
                        Fired when the user clicks an element.
                    </td>
                </tr>
                <tr>
                    <td class="bordered span-2">
                       <button id="mouse-dblclick">Double Click me!</button>
                    </td>
                    <td class="bordered p-left">
                        Fired when the user double-clicks an element.
                    </td>
                </tr>
                <tr>
                    <td class="bordered span-2">
                       <button id="mouse-down">Mouse Down Event</button>
                    </td>
                    <td class="bordered p-left">
                        Fired when the user presses the mouse button down.
                    </td>
                </tr>
                <tr>
                    <td class="bordered span-2">
                       <button id="mouse-up">Mouse Up Event</button>
                    </td>
                    <td class="bordered p-left">
                        Fired when the user releases the mouse button.
                    </td>
                </tr>
                <tr>
                    <td class="bordered span-2">
                       <button id="mouse-over">Mouse Over</button>
                    </td>
                    <td class="bordered p-left">
                        Fired when the user moves the mouse over an element.
                    </td>
                </tr>
                <tr>
                    <td class="bordered span-2">
                       <button id="mouse-out">Mouse Out</button>
                    </td>
                    <td class="bordered p-left">
                        Fired when the user moves the mouse out on the element.
                    </td>
                </tr>
                <tr>
                    <td class="bordered span-2">
                       <button id="mouse-move">Mouse Move</button>
                    </td>
                    <td class="bordered p-left">
                        Fired when the user moves the mouse over an element.
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script>
        const mouseclick = document.getElementById('mouse-click');

        mouseclick.addEventListener('click', () => {
            alert('You clicked the button!');
        });

        const mousedblclick = document.getElementById('mouse-dblclick');

        mousedblclick.addEventListener('dblclick', () => {
            alert('You clicked the button!');
        });

        const mousedown = document.getElementById('mouse-down');

        mousedown.addEventListener('mousedown', () => {
            alert('You clicked the button!');
        });

        
        const mouseup = document.getElementById('mouse-up');

        mouseup.addEventListener('mouseup', () => {
            alert('You clicked the button!');
        });

        
        const mouseover = document.getElementById('mouse-over');

        mouseover.addEventListener('mouseover', () => {
            alert('You clicked the button!');
        });

        
        const mouseout = document.getElementById('mouse-out');

        mouseout.addEventListener('mouseout', () => {
            alert('You clicked the button!');
        });

        
        const mousemove = document.getElementById('mouse-move');

        mousemove.addEventListener('mousemove', () => {
            alert('You clicked the button!');
        });

        
    </script>
</body>
